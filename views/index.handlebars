<h1>The Burger Cafe Menu</h1>
<h2>Waiting to be devoured!</h2>
<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit">I EAT!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Claimed</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                </form>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>

    <div class="form-group">
    <label for="eaten">Did you eat it already?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten<br>
    <input type="radio" name="devoured" value="0"> NOT YET
</div>

    <button type="submit">Add burger</button>
</form>

